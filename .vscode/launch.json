	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Tauri Development Debug",
			"cargo": {
				"args": ["build", "--bin=melody_backend", "--package=melody_backend"],
				"filter": {
					"name": "melody_backend",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}",
			"env": {
				"RUST_LOG": "none,melody_backend=debug"
			},
			"preLaunchTask": "app:dev"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Tauri Production Debug",
			"cargo": {
				"args": ["build", "--release", "--bin=melody_backend", "--package=melody_backend"],
				"filter": {
					"name": "melody_backend",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}",
			"env": {
				"RUST_LOG": "none,melody_backend=debug"
			},
			"preLaunchTask": "app:build"
		}
	]
}
