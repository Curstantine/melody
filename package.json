		"preview:app": "pnpm --filter app run preview --port 5173"
	},
	"devDependencies": {
		"@tauri-apps/cli": "^1.4.0",
		"@types/node": "^20.6.3",
		"@typescript-eslint/eslint-plugin": "^6.7.2",
		"@typescript-eslint/parser": "^6.7.2",
		"eslint": "^8.49.0",
		"eslint-define-config": "^1.23.0"
	}
}
