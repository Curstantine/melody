{
	"type": "module",
	"scripts": {
		"dev:app": "pnpm --filter app run dev",
		"dev:backend": "cargo build --bin=melody_backend --package=melody_backend && ./target/debug/melody_backend.exe",
		"build:app": "pnpm build:packages && pnpm --filter app run build",
