{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "pnpm run build",
		"beforeDevCommand": "pnpm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../app/dist"
	},
	"package": {
		"productName": "melody"
	},
	"tauri": {
		"allowlist": {
			"window": {
				"all": false,
				"close": true,
				"create": true,
				"hide": true,
				"maximize": true,
				"minimize": true,
				"setClosable": true,
				"setCursorGrab": true,
				"setCursorIcon": true,
				"unmaximize": true,
				"unminimize": true,

				"setFocus": false,
				"setFullscreen": false,
				"setPosition": false,
				"setSize": false,
				"setTitle": false,

				"show": true,
				"startDragging": true
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "moe.curstantine.melody",
			"longDescription": "Standalone music player",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"title": "Melody",
				"width": 800,
				"minWidth": 800,
				"height": 600,
				"minHeight": 600,
				"resizable": true,
				"decorations": false
			}
		]
	}
}
